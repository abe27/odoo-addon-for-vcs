<odoo>
    <data>
        <!-- explicit list view definition -->
        <!-- Account Book -->
        <record id="vscgroup_account_book_list" model="ir.ui.view">
            <field name="name">Account Book</field>
            <field name="model">vcsgroup.account_book</field>
            <field name="arch" type="xml">
                <sheet>
                    <tree>
                        <field name="account_book_id"/>
                        <field name="account_book_code"/>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="is_active"/>
                    </tree>
                </sheet>
            </field>
        </record>

        <record id="vscgroup_account_book_form" model="ir.ui.view">
            <field name="name">Account Book</field>
            <field name="model">vcsgroup.account_book</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group name="name" string="Infomation">
                            <field name="account_book_id"/>
                            <field name="account_book_code"/>
                        </group>
                        <group name="name" string="Detail">
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="is_active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="vscgroup_account_book_action">
            <field name="name">จัดการข้อมูล Account Book</field>
            <field name="res_model">vcsgroup.account_book</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- End Account Book -->


