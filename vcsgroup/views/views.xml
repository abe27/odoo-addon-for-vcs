<odoo>
    <data>
        <!-- Account Book -->
        <record id="vscgroup_account_book_list" model="ir.ui.view">
            <field name="name">Account Book</field>
            <field name="model">vcsgroup.account_book</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="account_book_id"/>
                    <field name="account_book_code"/>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="is_active"/>
                </tree>
            </field>
        </record>

        <record id="vscgroup_account_book_form" model="ir.ui.view">
            <field name="name">Account Book</field>
            <field name="model">vcsgroup.account_book</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group name="name" string="Infomation">
                            <field name="account_book_id"/>
                            <field name="account_book_code"/>
                        </group>
                        <group name="name" string="Detail">
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="is_active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="vscgroup_account_book_action">
            <field name="name">จัดการข้อมูล Account Book</field>
            <field name="res_model">vcsgroup.account_book</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- End Account Book -->

        <!-- Whs -->
        <record id="vcsgroup_whs_list" model="ir.ui.view">
            <field name="name">Whouse</field>
            <field name="model">vcsgroup.whs</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="whs_id"/>
                    <field name="whs_code"/>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="is_active"/>
                </tree>
            </field>
        </record>

        <record id="vcsgroup_whs_form" model="ir.ui.view">
            <field name="name">Whouse</field>
            <field name="model">vcsgroup.whs</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="whs_id"/>
                            <field name="whs_code"/>
                        </group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="is_active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="vscgroup_whouse_action">
            <field name="name">จัดการข้อมูล Whouse</field>
            <field name="res_model">vcsgroup.whs</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- End Whs -->

        <!-- Unit -->
        <record id="vcsgroup_unit_list" model="ir.ui.view">
            <field name="name">Unit</field>
            <field name="model">vcsgroup.unit</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="unit_id"/>
                    <field name="unit_code"/>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="is_active"/>
                </tree>
            </field>
        </record>

        <record id="vcsgroup_unit_form" model="ir.ui.view">
            <field name="name">Unit</field>
            <field name="model">vcsgroup.unit</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="unit_id"/>
                            <field name="unit_code"/>
                        </group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="is_active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="vscgroup_unit_action">
            <field name="name">จัดการข้อมูล Unit</field>
            <field name="res_model">vcsgroup.unit</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- End Unit -->

        <!-- Top menu item -->
        <menuitem name="จัดการข้อมูล VCS Master Data" id="vcsgroup.menu_root"/>
        <!-- menu categories -->
        <menuitem name="จัดการข้อมูล" id="vcsgroup.menu_master_data" parent="vcsgroup.menu_root"/>
        <menuitem name="Menu 2" id="vcsgroup.menu_2" parent="vcsgroup.menu_root"/>
        <!-- actions -->
        <menuitem name="Account Booking" id="vcsgroup.menu_account_book" sequence="0" parent="vcsgroup.menu_master_data" action="vscgroup_account_book_action"/>
        <menuitem id="vcsgroup.menu_whs" name="Whouse" sequence="1" parent="vcsgroup.menu_master_data" action="vscgroup_whouse_action" />
        <menuitem id="vcsgroup.menu_unit" name="Unit" sequence="2" parent="vcsgroup.menu_master_data" action="vscgroup_unit_action" />
        <!-- <menuitem name="Server to list" id="vcsgroup" parent="vcsgroup.menu_2" action="vcsgroup.action_server"/> -->

    </data>
</odoo>